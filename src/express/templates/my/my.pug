extends ../layout.pug

block content
  main.main-page.main-page--padding
    section.main-page__notes.notes
      h1.notes__title Мои записи
      ul.notes__list
        each article in articles
          li.notes__list-item
            time.notes__item-time(datetime=`${new Date(article.createdDate).toLocaleDateString("sv")}T${new Date(article.createdDate).toLocaleTimeString([], {timeStyle: 'short'})}`)
              | #{new Date(article.createdDate).toLocaleString("ru-ru", {dateStyle: 'short', timeStyle: 'short'})}
            a.notes__item-text(href=`/articles/${article.id}`) #{article.title}
            button.notes__button.button.button--close-item(type='button')
              span.visually-hidden Закрыть строку списка
